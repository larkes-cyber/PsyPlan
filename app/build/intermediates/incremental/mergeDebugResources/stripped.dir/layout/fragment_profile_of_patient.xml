<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/back_of_profile"
    tools:context=".presentation.fragment.ProfileOfPatientFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="top"
                android:layout_marginLeft="5dp"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_left" />
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dude"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monsterbig"
                    android:id="@+id/name"
                    android:layout_marginLeft="12dp"
                    android:text="Иванdfgfd"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birth"
                android:background="@drawable/back_of_form_to_auth"
                android:text="Дата рождения: 01.01.1990"
                android:textColor="@color/black"
                android:fontFamily="@font/monster"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="18dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_of_form_to_auth"
                android:text="E-mail: ivanivanich101@gmail.ru"
                android:textColor="@color/black"
                android:fontFamily="@font/monster"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="18dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/hill"
                android:layout_height="wrap_content"
                android:background="@drawable/back_of_form_to_auth"
                android:text="Заболевание: F31, F33, F55"
                android:textColor="@color/black"
                android:fontFamily="@font/monster"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="18dp"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/back_of_form_to_auth"
                android:layout_marginTop="10dp"
                android:padding="18dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monster"
                    android:text="Специалист:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Развернуть"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/monster"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/back_of_form_to_auth"
                android:layout_marginTop="10dp"
                android:padding="18dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monster"
                    android:text="Список лекарств:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Развернуть"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/monster"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/oms"
                android:background="@drawable/back_of_form_to_auth"
                android:text="Полис ОМС: 0000-0000-0000-0000"
                android:textColor="@color/black"
                android:fontFamily="@font/monster"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="18dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/dms"
                android:layout_height="wrap_content"
                android:background="@drawable/back_of_form_to_auth"
                android:text="Полис ДМС: 0000-0000-0000-0000"
                android:textColor="@color/black"
                android:fontFamily="@font/monster"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="18dp"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>