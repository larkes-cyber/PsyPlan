<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_of_auth1"
    tools:context=".presentation.fragment.SignInOrAuth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_of_form_to_auth"
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_gravity="center"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sign_id"
                android:background="@drawable/button_to_continue"
                android:drawableRight="@drawable/arr"
                android:fontFamily="@font/monster"
                android:paddingLeft="27dp"
                android:paddingRight="32dp"
                style="@style/Button.Color"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="вход"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/auth"
            android:background="@drawable/button_to_continue"
            android:drawableRight="@drawable/arr"
            android:fontFamily="@font/monster"
            android:paddingLeft="27dp"
            android:paddingRight="32dp"
            style="@style/Button.Color"
            android:paddingTop="14dp"
            android:paddingBottom="16dp"
            android:text="Регистрация"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>