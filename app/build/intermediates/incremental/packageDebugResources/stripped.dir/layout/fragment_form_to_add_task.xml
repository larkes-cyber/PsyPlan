<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/form_to_add_task"
    android:layout_margin="5dp"
    android:padding="15dp"
    tools:context=".presentation.fragment.FormToAddTaskFragment">

    <EditText
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/task"
        android:hint="Здоровье"
        android:background="@drawable/form_for_text"
        android:fontFamily="@font/monster"
        android:textColor="#E6000000"
        android:padding="10dp"
        android:textSize="12sp"
        android:textColorHint="#B3000000"/>
    <EditText
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="hh:mm"
        android:layout_marginLeft="10dp"
        android:background="@drawable/form_for_text"
        android:fontFamily="@font/monster"
        android:textColor="#E6000000"
        android:padding="10dp"
        android:id="@+id/time"
        android:textSize="12sp"
        android:textColorHint="#B3000000"/>
        <ImageView
            android:id="@+id/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/but_add"
            android:src="@drawable/coffee"
            android:padding="6dp"/>
</LinearLayout>